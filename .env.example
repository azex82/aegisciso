# ============================================================================
# SHARP (AegisCISO) Production Environment Configuration
# ============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="https://your-domain.com"

# ============================================================================
# AI Configuration (Required for AI Chat)
# ============================================================================

# Set to "false" to enable real AI (Groq API)
AI_DEMO_MODE="false"

# Groq API Key (FREE - Llama 3.3 70B)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY="gsk_your_groq_api_key_here"

# Optional: OpenAI API Key (fallback)
OPENAI_API_KEY=""

# Optional: Local Sovereign AI Backend (if deploying Ollama)
SOVEREIGN_AI_URL="http://localhost:8000"

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_AI_FEATURES="true"

# ============================================================================
# Security (Production)
# ============================================================================

# Generate with: openssl rand -base64 32
JWT_SECRET=""
ENCRYPTION_KEY=""

# Node environment
NODE_ENV="production"
